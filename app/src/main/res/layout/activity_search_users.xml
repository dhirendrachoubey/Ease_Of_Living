<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:gravity="center"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:textSize="16sp"
           android:text="@string/search_user"/>
           <ImageView
               android:id="@+id/ivArrow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:layout_alignParentRight="true"
               android:src="@mipmap/icon_arrow_up"/>
       </RelativeLayout>
        <LinearLayout
            android:id="@+id/llSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/et_style"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="left|center"
                android:text="@string/search_using"
                android:textColor="@color/colorPrimary"/>

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_below="@+id/ivClose"
                android:background="@drawable/et_style">
                <RadioButton
                    android:id="@+id/rbByName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
                <RadioButton
                    android:id="@+id/rbByEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/email_id"/>
                <RadioButton
                    android:id="@+id/rbByMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/mobile"/>
            </RadioGroup>


                <TextView
                    android:id="@+id/tvNameSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="left|center"
                    android:text="@string/name"
                    android:textColor="@color/blue"/>

                <EditText
                    android:id="@+id/etNameSearch"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:background="@drawable/et_style"
                    android:gravity="left|center"
                    android:hint="@string/name"
                    android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/tvEmailIdSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="left|center"
                android:text="@string/email_id"
                android:textColor="@color/blue"/>

            <EditText
                android:id="@+id/etEmailIdSearch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:textSize="14sp"
                android:background="@drawable/et_style"
                android:gravity="left|center"
                android:hint="@string/email_id"
                android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/tvMobileNoSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="left|center"
                android:text="@string/mobile_number"
                android:textColor="@color/blue"/>

            <EditText
                android:id="@+id/etMobileNoSearch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="10"
                android:visibility="gone"
                android:textSize="14sp"
                android:background="@drawable/et_style"
                android:gravity="left|center"
                android:hint="@string/mobile_number"
                android:textColor="@color/blue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTotalSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="left|center"
                android:text=""
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                style="@style/buttonBlue"
                android:text="@string/search"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
</LinearLayout>


        <ListView
            android:id="@+id/lvSearchUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="3dp"
            android:layout_margin="2dp"
            android:layout_marginBottom="10dp"/>

</LinearLayout>