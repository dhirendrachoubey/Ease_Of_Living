<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context="in.nic.ease_of_living.gp.ShowGpDataActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/gram_panchayat"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvGpName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Gp Data"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="5dp"
        android:text="@string/pdf"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/llEnumBlockStatus"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivEnumBlockStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_minus"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center|left"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="@string/enum_block_status"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEnumBlockStatusData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible">


        <TextView
            android:id="@+id/tvEnumBlockLastSynced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/enum_block_status"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:gravity="center"/>

        <LinearLayout
            style="@style/linearLayoutHorizontal1"
            android:gravity="center"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvTotalHhds"
                android:text="@string/total_hhd"
                style="@style/textView8"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvTotalHhdsData"
                android:text="0"
                style="@style/textView8"
                android:layout_weight="1"
                />

        </LinearLayout>

        <!--<LinearLayout
            style="@style/linearLayoutHorizontal1"
            android:gravity="center"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvUninhabitatVillages"
                android:text="@string/uninhabitat_villages"
                style="@style/textView8"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvUninhabitatVillagesData"
                android:text="0"
                style="@style/textView8"
                android:layout_weight="1"
                />

        </LinearLayout>-->

        <LinearLayout
            style="@style/linearLayoutHorizontal1"
            android:gravity="center"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvNotStartedHhds"
                android:text="@string/not_started_hhds"
                style="@style/textView8"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvNotStartedHhdsData"
                android:text="0"
                style="@style/textView8"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/linearLayoutHorizontal1"
            android:gravity="center"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvSaveAsDraftHhds"
                android:text="@string/save_as_draft_hhds"
                style="@style/textView8"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvSaveAsDraftHhdsData"
                android:text="0"
                style="@style/textView8"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/linearLayoutHorizontal1"
            android:gravity="center"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvCompletedHhds"
                android:text="@string/completed_hhds"
                style="@style/textView8"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvCompletedHhdsData"
                android:text="0"
                style="@style/textView8"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/linearLayoutHorizontal1"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvUploadPendingHhds"
                android:text="@string/upload_pending_households"
                style="@style/textView8"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvUploadPendingHhdsData"
                android:text="0"
                style="@style/textView8"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/linearLayoutHorizontal1"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvUploadedHhds"
                android:text="@string/uploaded_hhds"
                style="@style/textView8"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvUploadedHhdsData"
                android:text="0"
                style="@style/textView8"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/linearLayoutHorizontal1"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvVerifiedHhds"
                android:text="@string/verified_hhds"
                style="@style/textView8"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvVerifiedHhdsData"
                android:text="0"
                style="@style/textView8"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/llEnumBlockDetail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivEnumBlockDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_plus"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center|left"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="@string/household_details"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEnumBlockDetailData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <!--<ListView
            android:id="@+id/lv_household"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="3dp"
            android:layout_margin="2dp"
            android:fadeScrollbars="false"
            android:layout_marginBottom="5dp"
            />-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvHousehold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/activity_margin_content"
                android:paddingTop="@dimen/activity_margin_content"
              />

        </FrameLayout>
    </LinearLayout>


</LinearLayout>
