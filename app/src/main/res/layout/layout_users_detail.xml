<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="3dp"
    android:background="@drawable/layout_round_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
           android:src="@mipmap/ic_launcher_logo"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_height="match_parent"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"
            android:text="User Name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_height="1.5dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textColor="@color/blue"
                android:gravity="left"
                android:textSize="16sp"
                android:text="@string/user_id"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xyz@gmail.com" />

                <ImageView
                    android:id="@+id/ivEmailVerified"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_non_verified"
                    />
                <TextView
                    android:id="@+id/tvEmailVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_verified" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textColor="@color/blue"
                android:gravity="left"
                android:textSize="16sp"
                android:text="@string/mobile_number"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xyz@gmail.com" />
                <ImageView
                    android:id="@+id/ivMobileVerified"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_non_verified"
                    />
                <TextView
                    android:id="@+id/tvMobileVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_verified" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textColor="@color/blue"
                android:gravity="left"
                android:textSize="16sp"
                android:text="@string/name"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="xyz@gmail.com" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textColor="@color/blue"
                android:gravity="left"
                android:textSize="16sp"
                android:text="@string/organisation_name"/>
            <TextView
                android:id="@+id/tvOrganisationName"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="xyz@gmail.com" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textColor="@color/blue"
                android:gravity="left"
                android:textSize="16sp"
                android:text="@string/state"/>
            <TextView
                android:id="@+id/tvState"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="9999999999" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textColor="@color/blue"
                android:gravity="left"
                android:textSize="16sp"
                android:text="@string/district"/>
            <TextView
                android:id="@+id/tvDistrict"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="9999999999" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textColor="@color/blue"
                android:gravity="left"
                android:textSize="16sp"
                android:text="@string/dev_block"/>
            <TextView
                android:id="@+id/tvTehsil"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="9999999999" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textColor="@color/blue"
                android:gravity="left"
                android:textSize="16sp"
                android:text="@string/gram_panchayat"/>
            <TextView
                android:id="@+id/tvTown"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="9999999999" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnSkip"
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_gravity="right"
                style="@style/buttonLightBlue"
                android:text="@string/skip" />
            <Button
                android:id="@+id/btnReject"
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_gravity="right"
                style="@style/buttonLightBlue"
                android:text="@string/reject" />

            <Button
                android:id="@+id/btnApprove"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:layout_gravity="left"
                style="@style/buttonBlue"
                android:text="@string/approve" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvRejectedMsg"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="@string/msg_user_rejected" />

    </LinearLayout>

</ScrollView>